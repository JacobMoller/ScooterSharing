<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_rides"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp">
    <TextView
        android:id="@+id/ride_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/default_ride_name"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/ride_location"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/default_ride_location"/>
    <TextView
        android:id="@+id/ride_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/default_ride_date"/>
</LinearLayout>