<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <action android:id="@+id/action_global_scooterlistFragment"
        app:destination="@id/scooterListFragment"/>

    <fragment
        android:id="@+id/mainFragment"
        android:name="dk.itu.moapd.scootersharing.jacj.ui.Main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/show_start_ride"
            app:destination="@id/startRideFragment" />
        <action
            android:id="@+id/show_update_ride"
            app:destination="@id/updateRideFragment" />
        <action
            android:id="@+id/show_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/show_scooterlist"
            app:destination="@id/scooterListFragment" />
        <action
            android:id="@+id/show_location"
            app:destination="@id/locationFragment" />
        <action
            android:id="@+id/show_newmaps"
            app:destination="@id/newMapsFragment" />
        <action
            android:id="@+id/show_permissionstest"
            app:destination="@id/permissionsTest" />
    </fragment>
    <fragment
        android:id="@+id/startRideFragment"
        android:name="dk.itu.moapd.scootersharing.jacj.ui.StartRide.StartRideFragment"
        android:label="StartRideFragment"
        tools:layout="@layout/fragment_start_ride" />
    <fragment
        android:id="@+id/updateRideFragment"
        android:name="dk.itu.moapd.scootersharing.jacj.ui.UpdateRide.UpdateRideFragment"
        android:label="UpdateRideFragment"
        tools:layout="@layout/fragment_update_ride" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="dk.itu.moapd.scootersharing.jacj.ui.Login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/show_main"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/scooterListFragment"
        android:name="dk.itu.moapd.scootersharing.jacj.ui.ScooterList.ScooterListFragment"
        android:label="ScooterListFragment"
        tools:layout="@layout/fragment_scooterlist"/>
    <fragment
        android:id="@+id/locationFragment"
        android:name="dk.itu.moapd.scootersharing.jacj.ui.Location.LocationFragment"
        android:label="LocationFragment"
        tools:layout="@layout/fragment_location"/>
    <fragment
        android:id="@+id/newMapsFragment"
        android:name="dk.itu.moapd.scootersharing.jacj.ui.Maps.NewMapsFragment"
        android:label="NewMapsFragment"
        />
    <fragment
        android:id="@+id/permissionsTest"
        android:name="dk.itu.moapd.scootersharing.jacj.ui.PermissionsTest.PermissionsTest"
        android:label="PermissionsTest" />
</navigation>